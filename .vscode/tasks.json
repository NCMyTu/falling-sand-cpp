{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Raylib App",
            "command": "${workspaceFolder}\\.vscode\\build.bat",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "args": [],
            "group": {
                "kind": "build"
            },  
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds a Raylib program using g++"
        },
        {
            "type": "cppbuild",
            "label": "g++ build",
            "command": "c:\\Program Files (x86)\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "c:\\Program Files (x86)\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        }
    ]
}